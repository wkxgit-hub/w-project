<view class="van-radio custom-class">
    <view bindtap="onChange" class="van-radio__icon-wrap">
        <slot name="icon" wx:if="{{useIconSlot}}"></slot>
        <van-icon class="{{utils.bem( 'radio__icon',[ shape,{disabled:disabled,checked:value===name} ] )}}" customClass="icon-class" customStyle="line-height: 20px;" name="success" style="{{checkedColor&&value&&!disabled?'border-color:'+checkedColor+'; background-color:'+checkedColor:''}}" wx:else></van-icon>
    </view>
    <view bindtap="onClickLabel" class="label-class {{utils.bem( 'radio__label',[ labelPosition,{disabled:disabled} ] )}}">
        <slot></slot>
    </view>
</view>
<wxs module="utils" src="../wxs/utils.wxs" />