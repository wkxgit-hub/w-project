page {
    width: 100%;
}

.title-bar {
    padding-left: 50rpx;
    color: #ffffff;
}

.padding {
    padding: 82rpx 30rpx 0;
    box-sizing: border-box;
}

.sx_wrap {
    position: fixed;
    left: 0;
    width: 100%;
    height: 80rpx;
    border-bottom: 2rpx solid #f1f3f8;
    display: flex;
    justify-content: space-around;
    top: 0;
    z-index: 99999;
    background: #ffffff;
}

.sx_wrap .sx {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #4d4d4d;
}

.sx_wrap .sx .picker {
    display: inline-block;
    vertical-align: top;
}

.sx_wrap .sx .img {
    display: inline-block;
    vertical-align: top;
}

.sx_wrap .sx .img image {
    display: inline-block;
    width: 14rpx;
    height: 8rpx;
    vertical-align: middle;
    padding-left: 10rpx;
}