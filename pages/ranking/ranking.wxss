#column-dom {
    width: 100%;
    height: 100%;
}

.title-bar {
    padding-left: 50rpx;
    background: rgba(0,0,0,0);
}

page {
    height: 100%;
}

.tongji_wrap {
    width: 100%;
    height: 246rpx;
    border-radius: 10rpx;
    background: #ffffff;
    box-shadow: 0rpx 4rpx 18rpx #b5bbbe;
    padding: 32rpx 20rpx 38rpx;
    box-sizing: border-box;
}

.tongji_wrap .dabiao {
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 30rpx;
    color: #333333;
}

.tongji_wrap .dabiao text {
    color: #56a1f5;
}

.tongji_wrap .dabiao .lt {
    float: left;
}

.tongji_wrap .dabiao .rt {
    float: right;
    padding: 0 40rpx 0 24rpx;
    position: relative;
    box-sizing: border-box;
    font-size: 24rpx;
    color: #b4b5c9;
}

.tongji_wrap .dabiao .rt .circle {
    width: 12rpx;
    height: 12rpx;
    background: #bfc0d1;
    border-radius: 50%;
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -6rpx;
}

.tongji_wrap .dabiao .rt .img {
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -12rpx;
}

.tongji_wrap .dabiao .lt.bottom {
    font-size: 24rpx;
    color: #b4b5c9;
}

.tongji_wrap .dabiao .rt .circle.success {
    background: #5ba5f7;
    border: 2rpx solid #5ba5f7;
}

.tongji_wrap .dabiao .rt .circle.error {
    background: #ffffff;
    border: 2rpx solid #f05c5c;
}

.tongji {
    width: 100%;
    margin-top: 48rpx;
}

.tongji .line {
    width: 100%;
    padding: 0 28rpx;
    box-sizing: border-box;
    height: 12rpx;
    position: relative;
}

.tongji .line .img {
    position: absolute;
    width: 100%;
    height: 4rpx;
    top: 50%;
    left: 0;
    padding: 0 28rpx;
    box-sizing: border-box;
}

.tongji .line .qiu {
    width: 100%;
    height: 12rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: nowrap;
}

.tongji .line .qiu .circle {
    width: 12rpx;
    height: 12rpx;
    background: #bfc0d1;
    border: 2rpx solid #bfc0d1;
    border-radius: 50%;
    z-index: 999;
}

.tongji .line .qiu .circle.success {
    background: #5ba5f7;
    border: 2rpx solid #5ba5f7;
}

.tongji .line .qiu .circle.error {
    background: #ffffff;
    border: 2rpx solid #f05c5c;
}

.week {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: nowrap;
    font-size: 20rpx;
    color: #bfc0d1;
    text-align: center;
    margin-top: 16rpx;
}

.week view {
    width: 64rpx;
}