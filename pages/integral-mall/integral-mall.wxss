.title-bar {
    background: rgba(0,0,0,0);
}

.van-button--large {
    width: 100%;
    height: 80rpx!important;
    line-height: 80rpx!important;
    font-size: 28rpx!important;
    color: #4e9bf5!important;
}

.van-overlay {
    background-color: rgba(0,0,0,0.3)!important;
}

.bindCon {
    width: 100%;
    padding-bottom: 12rpx;
    box-sizing: border-box;
}

.bindCon .title {
    width: 100%;
    height: 84rpx;
    text-align: center;
    font-size: 28rpx;
    color: #000000;
    line-height: 84rpx;
    border-bottom: 2rpx solid #f2f1f6;
    margin-bottom: 26rpx;
}

.bindCon .phone {
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.bindCon .phone input {
    width: 100%;
    height: 80rpx;
    font-size: 28rpx;
    color: #7f808e;
    border: none;
    background: #f2f1f6;
    border-radius: 10rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    line-height: 80rpx;
}

.bindCon .phone .textarea {
    width: 100%;
    height: 120rpx;
    font-size: 28rpx;
    color: #7f808e;
    border: none;
    background: #f2f1f6;
    border-radius: 10rpx;
    padding: 24rpx 20rpx;
    box-sizing: border-box;
    line-height: 36rpx;
}

.bindCon .info {
    width: 100%;
    padding: 32rpx 0 36rpx;
    box-sizing: border-box;
}

.bindCon .info .titinfo {
    text-indent: 96rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #7f808e;
}