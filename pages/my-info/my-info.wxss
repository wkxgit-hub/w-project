page {
    background: #f2f1f6;
}

.van-button--large {
    width: 100%;
    height: 80rpx!important;
    line-height: 80rpx!important;
    font-size: 28rpx!important;
    color: #4e9bf5!important;
}

.van-overlay {
    background-color: rgba(0,0,0,0.3)!important;
}

.bindCon {
    width: 100%;
    padding-bottom: 12rpx;
    box-sizing: border-box;
}

.bindCon .title {
    width: 100%;
    height: 84rpx;
    text-align: center;
    font-size: 28rpx;
    color: #000000;
    line-height: 84rpx;
    border-bottom: 2rpx solid #f2f1f6;
    margin-bottom: 26rpx;
}

.bindCon .phone {
    width: 100%;
    padding: 0 48rpx;
    box-sizing: border-box;
    margin-bottom: 36rpx;
}

.bindCon .phone input {
    width: 100%;
    height: 50rpx;
    font-size: 28rpx;
    color: #7f808e;
    border-bottom: 2rpx solid #4e9bf5;
}

.bindCon .code {
    width: 100%;
    padding: 0 196rpx 0 48rpx;
    box-sizing: border-box;
    margin-bottom: 36rpx;
    position: relative;
}

.bindCon .code input {
    width: 100%;
    height: 50rpx;
    font-size: 28rpx;
    color: #7f808e;
    border-bottom: 2rpx solid #4e9bf5;
}

.bindCon .code .getcode {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    position: absolute;
    top: 0;
    right: 48rpx;
    color: #4e9bf5;
    font-size: 28rpx;
}