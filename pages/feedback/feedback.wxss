page {
    background: #f2f1f6;
    height: 100%;
}

.contact {
    width: 100%;
    height: 90rpx;
    background: #FFFFFF;
    font-size: 28rpx;
    color: #7c8a9a;
    padding: 0 48rpx;
    box-sizing: border-box;
    margin: 20rpx 0 10rpx;
}

.contact input {
    width: 100%;
    height: 90rpx;
    min-height: 90rpx;
}

.textarea {
    width: 100%;
    background: #FFFFFF;
    font-size: 28rpx;
    color: #7c8a9a;
    padding: 32rpx 48rpx;
    box-sizing: border-box;
}

.textarea textarea {
    width: 100%;
    height: 310rpx;
}

.submit {
    width: 100%;
    margin-top: 90rpx;
    text-align: center;
}

.submit .btn {
    display: inline-block;
    width: 500rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    background: #4e9bf5;
    border-radius: 10rpx;
}