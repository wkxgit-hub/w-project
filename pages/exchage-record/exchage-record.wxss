.exchage {
    width: 100%;
    padding: 30rpx 50rpx 30rpx 220rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #f2f1f6;
    position: relative;
    height: 190rpx;
    overflow: hidden;
}

.exchage .img {
    position: absolute;
    top: 30rpx;
    left: 50rpx;
    width: 130rpx;
    height: 130rpx;
    background: #F2F1F6;
}

.exchage .info {
    width: 100%;
    height: 100%;
    position: relative;
}

.exchage .title {
    width: 100%;
    font-size: 26rpx;
    color: #333333;
}

.exchage .jf {
    width: 100%;
    font-size: 26rpx;
    color: #f05c5c;
}

.exchage .time {
    width: 100%;
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: space-between;
}

.exchage .time .lt {
    font-size: 22rpx;
    color: #b2b8d2;
}

.exchage .time .rt {
    font-size: 26rpx;
    color: #b2b8d2;
}